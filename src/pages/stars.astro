---
import StarField from "~/components/backgrounds/StarField.astro";
let counter = 0;
if (Astro.cookies.has("counter")) {
  const cookie = Astro.cookies.get("counter");
  if (!cookie) counter = 0;
  else counter = cookie.number() + 1;
}
Astro.cookies.set("counter", counter.toString());
---

<html>
  <head></head>
  <body>
    <StarField position="fixed" />
    <main>
      <h1>Stars {counter}</h1>
    </main>
  </body>
</html>

<style is:global>
  body {
    margin: 0px;
    color: white;
  }
  main {
    margin-right: auto;
    margin-left: auto;
    max-width: 750px;
    text-align: center;
  }
</style>
