{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "bookmarks.json",
  "description": "Schema definition for my bookmarks file.",
  "additionalProperties": false,
  "definitions": {
    "tag": {
      "description": "Content label tag.",
      "type": "string",
      "enum": [
        "90s",
        "art",
        "article",
        "blog",
        "books",
        "computers",
        "creepy",
        "dataset",
        "digital-garden",
        "economics",
        "games",
        "history",
        "networking",
        "math",
        "multiplayer",
        "people",
        "personal-site",
        "politics",
        "programming",
        "science",
        "silly",
        "tools",
        "web"
      ]
    },
    "link": {
      "type": "object",
      "required": [
        "url",
        "name",
        "description",
        "tags"
      ],
      "properties": {
        "url": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tag"
          }
        }
      }
    }
  },
  "type": "object",
  "required": [
    "links"
  ],
  "properties": {
    "links": {
      "description": "List of all the links",
      "type": "array",
      "items": {
        "$ref": "#/definitions/link"
      }
    }
  }
}
